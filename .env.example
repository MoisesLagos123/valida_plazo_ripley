# Configuración del navegador - ANTI-BOT
HEADLESS=false              # IMPORTANTE: Mantener en false para evadir detección
SLOW_MO=200                 # Velocidad más lenta para parecer humano

# Configuración de timeouts (aumentados para evasión)
PAGE_TIMEOUT=45000          # 45 segundos para carga de página
ELEMENT_TIMEOUT=15000       # 15 segundos para elementos

# Configuración de logging
LOG_LEVEL=info              # Puede ser: error, warn, info, debug

# URLs de la aplicación
RIPLEY_BASE_URL=https://www.ripley.cl

# Configuración de retry (aumentados para bloqueos)
MAX_RETRIES=5               # Más intentos para superar bloqueos
RETRY_DELAY=5000           # Mayor delay entre intentos

# SKU objetivo (puede ser modificado)
TARGET_SKU=2000377223468P

# CONFIGURACIONES ADICIONALES ANTI-BOT
# ====================================

# Tiempo de espera al detectar bloqueos (milisegundos)
ANTI_BOT_DELAY=15000        # 15 segundos de espera base

# Tiempo aleatorio adicional (milisegundos)
RANDOM_DELAY_MAX=10000      # Hasta 10 segundos adicionales aleatorios

# Configuración de User-Agent (automático por defecto)
# USER_AGENT_OVERRIDE=       # Dejar vacío para rotación automática

# Configuración de viewport (automática por defecto)
# VIEWPORT_WIDTH=1366        # Ancho de pantalla
# VIEWPORT_HEIGHT=768        # Alto de pantalla

# Configuración de geolocalización (Santiago, Chile por defecto)
# LATITUDE=-33.4489
# LONGITUDE=-70.6483

# Debug de anti-bot (solo para desarrollo)
DEBUG_ANTI_BOT=false        # true para más información de debugging
SCREENSHOT_ON_BLOCK=true    # Capturar screenshot al detectar bloqueo

# INSTRUCCIONES DE USO:
# ====================
# 1. Copia este archivo como .env en la raíz del proyecto
# 2. Ajusta los valores según sea necesario
# 3. NUNCA subas el archivo .env al repositorio
# 4. Usa LOG_LEVEL=debug si necesitas más información
# 5. Si experimentas bloqueos frecuentes, aumenta los delays
